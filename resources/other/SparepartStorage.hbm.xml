<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping
    PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
    "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">
<hibernate-mapping>
    <class name="com.cabletech.sparepartmanage.domainobjects.SparepartStorage"  table="spare_part_storage">
        <!-- A 32 hex character is our surrogate key. It's automatically
            generated by Hibernate with the UUID pattern. -->
        <id name="tid" type="string" unsaved-value="null" >
            <column name="tid" sql-type="char(32)" not-null="true"/>
            <generator class="assigned"/>
        </id>
        <property name="sparePartId" column="spare_part_id" type="string" />
        <property name="serialNumber" column="serial_number" type="string" />
        <property name="storagePosition" column="storage_position" type="string" />
        <property name="sparePartState" column="spare_part_state" type="string" />
        <property name="departId" column="depart_id" type="string" />
        <property name="storageNumber" column="storage_number" type="int" />
        <property name="storageDate" column="storage_date" type="timestamp" />
        <property name="takenOutStorage" column="taken_out_storage" type="string" />
        <property name="initStorage" column="init_storage" type="string" />
        <property name="storagePerson" column="storage_person" type="string" />
        <property name="storageRemark" column="storage_remark" type="string" />
        <property name="drawPerson" column="draw_person" type="string" />
    </class>
</hibernate-mapping>
