<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping
    PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
    "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">
<hibernate-mapping>
    <class name="com.cabletech.linepatrol.cut.module.CutHopRel"  table="lp_cut_subline">
        <id name="id" type="string" unsaved-value="null" >
            <column name="id" sql-type="varchar(12)" not-null="true"/>  
            <generator class="com.cabletech.commons.hb.StrSequenceGenerator">
               <param name="sequence">SEQ_LP_CUT_SUBLINE_ID</param>
               <param name="length">12</param>
            </generator>        
        </id>
        <property name="cutId" column="CUT_ID"/>
        <property name="sublineId" column="SUBLINE_ID"/>
    </class>
</hibernate-mapping>