<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping
    PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
    "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">
<hibernate-mapping>
    <class name="com.cabletech.baseinfo.domainobjects.Depart"  table="deptinfo">
        <!-- A 32 hex character is our surrogate key. It's automatically
            generated by Hibernate with the UUID pattern. -->
        <id name="deptID" type="string" unsaved-value="null" >
            <column name="DeptID" sql-type="char(32)" not-null="true"/>  
            <generator class="assigned"/>          
        </id>
        <property name="deptName"/>
        <property name="linkmanInfo"/>
        <property name="parentID"/>
        <property name="regionid"/>
        <property name="state"/>
        <property name="remark"/>
    </class>
</hibernate-mapping>