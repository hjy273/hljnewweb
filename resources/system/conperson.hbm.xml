<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping
    PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
    "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">
<hibernate-mapping>
    <class name="com.cabletech.sysmanage.domainobjects.ConPerson"  table="contractorperson" lazy="false">
        <!-- A 32 hex character is our surrogate key. It's automatically
            generated by Hibernate with the UUID pattern. -->
        <id name="id" type="string" unsaved-value="null" >
        	<generator class="com.cabletech.commons.hb.StrSequenceGenerator">
               <param name="sequence">SEQ_CONTRACTORINFO_ID</param>
               <param name="length">10</param>
            </generator>
        </id>
        <property name="name"/>
        <property name="phone"/>
        <property name="contractorid"/>
        <property name="state"/>
        <property name="regionid"/>
        <property name="sex"/>
        <property name="jobinfo"/>
        <property name="jobstate"/>
        <property name="culture"/>
        <property name="ismarriage"/>
        <property name="mobile"/>
        <property name="postalcode"/>
        <property name="familyaddress"/>
        <property name="workrecord"/>
        <property name="remark"/>
        <property name="persontype"/>
        <property name="identitycard"/>
        <property name="residantarea"/>
        <property name="issendsms"/>
        <property name="conditions" />
        <property name="postOffice" column="POST_OFFICE"/>
        <property name="enterTime" column="enter_time"/>
        <property name="leaveTime" column="leave_time"/>
    </class>
</hibernate-mapping>
