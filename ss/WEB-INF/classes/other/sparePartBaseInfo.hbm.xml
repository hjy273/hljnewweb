<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping
    PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
    "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">
<hibernate-mapping>
    <class name="com.cabletech.sparepartmanage.beans.SparepartBaseInfoBean"  table="spare_part_baseinfo">
        <id name="sparePartId" type="string" unsaved-value="null" >
            <column name="tid" sql-type="char(20)" not-null="true"/>
            <generator class="assigned"/>
        </id>
        <property name="sparePartName" column="spare_part_name"></property>
        <property name="sparePartModel" column="spare_part_model"></property>
        <property name="softwareVersion" column="software_version"></property>
        <property name="productFactory" column="product_factory"></property>
        <property name="sparePartRemark" column="spare_part_remark"></property>
         <property name="sparePartState" column="part_state"></property>
    </class>
</hibernate-mapping>
