<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping
    PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
    "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">
<hibernate-mapping>
    <class name="com.cabletech.sparepartmanage.domainobjects.SparepartApplyF"  table="spare_part_apply_f">
        <!-- A 32 hex character is our surrogate key. It's automatically
            generated by Hibernate with the UUID pattern. -->
        <id name="tid" type="string" unsaved-value="null" >
            <column name="tid" sql-type="char(32)" not-null="true"/>
            <generator class="assigned"/>
        </id>        
          <property name="sparePartId" column="spare_part_id" type="string" />
       <property name="usedPosition" column="used_position" type="string" />
       <property name="patrolgroupId" column="patrolgroup_id" type="string" />       
        <property name="useMode" column="use_mode" type="string" />
        <property name="replaceType" column="replace_type" type="string" />
       <property name="useNumber" column="use_number" type="int" />
       <property name="applyUsePosition" column="apply_use_position" type="string" />
       <property name="auditingState" column="auditing_state" type="string" />
      <property name="applyDate" column="apply_date" type="timestamp" />
       <property name="applyPerson" column="apply_person" type="string" />
       <property name="applyRemark" column="apply_remark" type="string" />
    </class>
</hibernate-mapping>
