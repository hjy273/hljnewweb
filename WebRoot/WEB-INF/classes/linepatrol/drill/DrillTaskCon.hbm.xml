<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping
    PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
    "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">
<hibernate-mapping>
    <class name="com.cabletech.linepatrol.drill.module.DrillTaskCon"  table="LP_DRILLTASK_CON">
        <id name="id" type="string" unsaved-value="null" >
            <column name="id" sql-type="VARCHAR(12)" not-null="true"/>  
            <generator class="com.cabletech.commons.hb.StrSequenceGenerator">
               <param name="sequence">SEQ_LP_DRILLTASK_CON_ID</param>
               <param name="length">12</param>
            </generator>
        </id>
        <property name="drillId" column="DRILL_ID"/>
        <property name="contractorId" column="CONTRACTOR_ID"/>
        <property name="state" column="STATE"/>
        <property name="jpbmFlowId" column="JPBM_FLOW_ID"/>
    </class>
</hibernate-mapping>