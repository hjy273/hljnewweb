<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping
    PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
    "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">
<hibernate-mapping>
    <class name="com.cabletech.linepatrol.acceptance.model.PipeTask"  table="LP_ACCEPTANCE_PTASK">
        <id name="id" type="string" unsaved-value="null" >
            <column name="ID" sql-type="varchar(12)" not-null="true"/>  
            <generator class="com.cabletech.commons.hb.StrSequenceGenerator">
               <param name="sequence">SEQ_LP_ACCEPTANCE_PTASK_ID</param>
               <param name="length">12</param>
            </generator>
        </id>
        <property name="taskId" column="TASK_ID"/>
        <property name="pipeId" column="PIPE_ID"/>
    </class>
</hibernate-mapping>