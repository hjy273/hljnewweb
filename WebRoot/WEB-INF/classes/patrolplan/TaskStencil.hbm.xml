<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping
    PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
    "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">
<hibernate-mapping>
    <class name="com.cabletech.planinfo.domainobjects.StencilTask"  table="task_stencil">
        <!-- A 32 hex character is our surrogate key. It's automatically
            generated by Hibernate with the UUID pattern. -->
        <id name="ID" type="string" unsaved-value="null" >
            <column name="stencilid" sql-type="char(32)" not-null="true"/>  
            <generator class="assigned"/>          
        </id>
        <property name="stencilname"/>
        <property name="patrolid"/>
        <property name="createdate"/>
        <property name="regionid"/>
        <property name="contractorid"/>
    </class>
</hibernate-mapping>